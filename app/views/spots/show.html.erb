<p id="notice"><%= notice %></p>

<div style="width: 250px; height: auto">
  <% if @spot.image.attached? %>
    <%= image_tag(@spot.image, style:"width: 100%; height: 100%") %>
  <% else %>
    <%= image_tag 'Placeholder.png', style:"width: 100%; height: 100%" %>
  <% end %>
</div>

<p>
  <strong>Address:</strong>
  <%= @spot.address %>
</p>

<p>
  <strong>Description:</strong>
  <%= @spot.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @spot.price %>
</p>

<% if @spot.user = current_user %>
 <%= link_to 'Edit', edit_spot_path(@spot) %> |
<% end %>
<%= link_to 'Back', spots_path %>
