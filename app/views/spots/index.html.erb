<h1>Spots</h1>

<ul class="spot-list">
<% @spots.each do |spot| %>
  <li>
    <header><%= link_to image_tag(spot.image, style:"width: 100%; height: 100%; border-top-left-radius: 1rem; border-top-right-radius: 1rem"), spot%></header>
    <strong><%= spot.address%></strong>
    <p>Price: $<%= spot.price %></p>
  </li>
<%end%>