<h1 class="text-center" > Find the best spot </h1>

<div style="display: flex; flex-direction: row; justify-content: space-evenly; padding-top: 2rem">
    <% @spots.each do |spot| %>
        <div style="width: 250px; height: auto; border: 1px solid grey">
            <%= link_to image_tag(spot.image, style:"width: 100%; height: 100%"), spot %>
        </div>
    <% end %>
</div>

<br>

<div class="text-center" style="padding-top: 3rem">
    <%= link_to "SHOW MORE SPOTS", spots_path, class:"btn btn-lg btn-primary"%>
</div>